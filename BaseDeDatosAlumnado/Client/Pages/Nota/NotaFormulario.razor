<EditForm Model="Nota" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class = "form-group">
        <label>Nota del Alumno</label>
        <div>
            <InputText class = "form-control" @bind-Value = "@Nota.NotaAlum"/>
            <ValidationMessage For="@(()=> Nota.NotaAlum)"/>
        </div>
    </div>
    <br />
    <button class = "btn btn-primary" type="submit">Guardar</button>
    <button class = "btn btn-secondary" @onclick="onCancel" type="button">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Nota Nota{ get; set; }
    [Parameter] public EventCallback onValidSubmit{ get; set; } 
    [Parameter] public EventCallback onCancel{ get; set; }
}
